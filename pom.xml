        <!--<groupId>com.sun.el</groupId>-->
        <!--<artifactId>el-ri</artifactId>-->
        <!--<version>1.0</version>-->
        <!--</dependency>-->

        <!-- Test -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.7</version>
            <scope>test</scope>
        </dependency>

    </dependencies>


</project>